<UserControl x:Class="KIDEControls.CodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KIDEControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ScrollViewer>
            <TextBox Background="DimGray" Foreground="White" Width="auto" Height="auto"
                AcceptsReturn="True" AcceptsTab="True" TextWrapping="WrapWithOverflow"
                Text="Hello world" IsEnabled="True">
            </TextBox>
        </ScrollViewer>
            
    </DockPanel>
</UserControl>
